<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_marginTop="10dp"

    >


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/solution_Tv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#F6F6F6"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="#FF0B0A0A"
        android:textSize="50sp"
        android:textStyle="bold"

        />


     <TextView
        android:id="@+id/result_Tv"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_above="@id/button_layout"
        android:layout_marginBottom="9dp"
        android:background="#F1F1F1"
        android:padding="10dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="#090909"
        android:textSize="65dp"
        android:textStyle="bold"

        />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="19dp"
        android:background="#DDDDDD"
        android:orientation="vertical"
        android:paddingVertical="15dp"
        app:cornerRadius="5dp"
        >

        <LinearLayout
            android:layout_width="367dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"

            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_c"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:backgroundTint="#B82FCF"
                android:padding="5dp"
                android:text="C"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:cornerRadius="32dp"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_openbraket"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:backgroundTint="#03A9F4"
                android:padding="5dp"
                android:text="("
                android:textColor="@color/white"
                android:textSize="30sp"
                app:cornerRadius="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_crossbraket"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:backgroundTint="#00BCD4"
                android:padding="5dp"
                android:text=")"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:cornerRadius="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_divide"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:backgroundTint="#EFB916"
                android:padding="5dp"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:cornerRadius="32dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="367dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"

            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button7"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:backgroundTint="#0DC615"
                android:padding="5dp"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:cornerRadius="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button8"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:backgroundTint="#0DC615"
                android:padding="5dp"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:cornerRadius="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button9"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:backgroundTint="#0DC615"
                android:padding="5dp"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:cornerRadius="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_multiplay"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:backgroundTint="#EFB916"
                android:padding="5dp"
                android:text="*"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:cornerRadius="32dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="367dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"

            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button4"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:backgroundTint="#0DC615"
                android:padding="5dp"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:cornerRadius="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button5"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:backgroundTint="#0DC615"
                android:padding="5dp"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:cornerRadius="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button6"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:backgroundTint="#0DC615"
                android:padding="5dp"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:cornerRadius="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_minus"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:backgroundTint="#EFB916"
                android:padding="5dp"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="40sp"
                app:cornerRadius="32dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="367dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"

            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button1"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:backgroundTint="#0DC615"
                android:padding="5dp"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:cornerRadius="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button2"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:backgroundTint="#0DC615"
                android:padding="5dp"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:cornerRadius="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button3"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:backgroundTint="#0DC615"
                android:padding="5dp"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:cornerRadius="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_plus"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:backgroundTint="#EFB916"
                android:padding="5dp"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:cornerRadius="32dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="367dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"

            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_ac"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:backgroundTint="#B82FCF"
                android:padding="1dp"
                android:text="AC"
                android:textColor="@color/white"
                android:textSize="13sp"
                app:cornerRadius="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button0"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:backgroundTint="#0DC615"
                android:padding="5dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:cornerRadius="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_dot"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:backgroundTint="#BC1D53"
                android:padding="5dp"
                android:paddingBottom="10dp"
                android:text="."
                android:textColor="@color/white"
                android:textSize="30sp"
                app:cornerRadius="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_equal"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:backgroundTint="#673AB7"
                android:padding="5dp"
                android:text="="
                android:textColor="@color/white"
                android:textSize="35sp"
                app:cornerRadius="32dp" />


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>